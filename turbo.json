{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "dev": {
        "persistent": true,
        "cache": false
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "!.next/cache/**", "dist/**"]
      },
      "lint": {},
      "typecheck": {
        "dependsOn": ["^build"]
      }
    },
    "globalEnv": [
      "DATABASE_URL",
      "BETTER_AUTH_SECRET",
      "BETTER_AUTH_URL",
      "GOOGLE_CLIENT_ID",
      "GOOGLE_CLIENT_SECRET",
      "NEXT_PUBLIC_API_URL"
    ]
  }
  